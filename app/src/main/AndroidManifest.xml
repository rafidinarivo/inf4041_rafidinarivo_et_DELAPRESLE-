<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.esiea.rafidinarivo_alexandre_delapresle_alexis.projetmobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity2" android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".Activity3" android:parentActivityName=".MainActivity"></activity>
        <meta-data
            android:name="android.support.PARRENT_ACTIVITY"
            android:value=".MainActivity"/>
    </application>

</manifest>